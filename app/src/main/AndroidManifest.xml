<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.dangerducks.cookit"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity"
                  android:launchMode="singleTop"
                  android:label="">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>

            <meta-data android:name="android.app.searchable"
                       android:resource="@xml/searchable" />

        </activity>

        <activity android:name=".SignIn"
                  android:label="">
        </activity>

        <activity android:name=".AddRecipe"
            android:label="@string/add_recipe_title">
        </activity>

        <activity android:name=".ShowRecipe"
                  android:label="">
        </activity>

        <activity android:name=".ShowIngredients"
                  android:label="">
        </activity>

        <activity android:name=".ShowFavourites"
                  android:label="">
        </activity>

        <activity android:name=".Profile"
                  android:label="@string/profile">

        </activity>

    </application>

</manifest>

 <!--
        To show the name of the app in the upper bar
  android:label="@string/app_name"
  -->